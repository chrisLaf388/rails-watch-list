<h1>
  <%= @list.name %>
  <% if @list.photo.key %>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
</h1>

<%= link_to 'CrÃ©er un Bookmark', new_list_bookmark_path(@list) %>

<ul>
  <% if @bookmarks %>
    <% @bookmarks.each do |book| %>
      <li>
        <p>
          <%= book.movie.title %> - <%= book.comment %>
          <%= link_to 'effacer', bookmark_path(book),
            method: :delete,
            data: { confirm: "Are you sure?" }
          %>
        </p>
      </li>
      <% end %>
  <% end %>
</ul>

<%= simple_form_for([@list, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>

<h3>Reviews</h3>
<ul>
  <% if @reviews %>
    <% @reviews.each do |review| %>
      <li>
        <%= review.content %>
      </li>
    <% end %>
  <% end %>
</ul>
